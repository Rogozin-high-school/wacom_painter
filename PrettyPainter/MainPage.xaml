<Page
    x:Class="PrettyPainter.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PrettyPainter"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <InkCanvas x:Name="inkCanvas" Margin="0,50,0,0"/>
        <InkToolbar x:Name="inkToolbar" TargetInkCanvas="{x:Bind inkCanvas}" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top"/>
        <Button x:Name="firstButton" Content="Button" HorizontalAlignment="Left" Margin="250,0,0,0" VerticalAlignment="Top" Height="48" Width="150"/>
    </Grid>
</Page>
